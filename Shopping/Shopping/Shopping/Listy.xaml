<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Gray"
             x:Class="Shopping.Listy">
    <ContentPage.Content>
        <ListView x:Name="listView" RowHeight="60" ItemSelected="ListView_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5" Orientation="Horizontal">
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Name_List}"
                                       TextColor="White" 
                                       FontSize="Large"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>